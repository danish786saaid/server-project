<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/style.css">
  <style>
    /* Static background fallback */
    body {
      background-image: url('/images/background.jpeg');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      background-attachment: fixed;
    }

    .topbar {
      position: absolute;
      top: 20px;
      right: 40px;
      text-align: right;
    }

    .note-footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: 8px;
    }

    .note-footer small {
      font-size: 0.85em;
      color: #555;
    }

    .note-footer .actions {
      display: flex;
      gap: 10px;
    }
  </style>
</head>
<body>
  <!-- Centered layout wrapper -->
  <div class="page-wrapper">
    <!-- Overlay for readability -->
    <div class="container overlay">
      
      <!-- Top right welcome and logout -->
      <div class="topbar">
        <p>Welcome, <%= user ? user.userName : "Guest" %></p>
        <a href="/logout">Logout</a>
      </div>

      <!-- Add note form -->
      <form method="POST" action="/notes">
        <textarea name="noteContent" placeholder="Write a note..." required></textarea>
        <button type="submit">Add note</button>
      </form>

      <!-- Notes list -->
      <% if (notes && notes.length) { %>
        <ul class="notes">
          <% notes.forEach(function(note) { %>
            <li>
              <form method="POST" action="/notes/edit/<%= note._id %>">
                <textarea name="noteContent"><%= note.noteContent %></textarea>
                
                <!-- Footer layout: time left, actions right -->
                <div class="note-footer">
                  <small>
                    Last modified:
                    <%= note.noteLastModified 
                         ? new Date(note.noteLastModified).toLocaleString("en-HK", { timeZone: "Asia/Hong_Kong" }) 
                         : "N/A" %>
                  </small>
                  <div class="actions">
                    <button type="submit">Save</button>
                    <a href="/notes/delete/<%= note._id %>">Delete</a>
                  </div>
                </div>
              </form>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p>No notes yet.</p>
      <% } %>

    </div>
  </div>

  <!-- Optional dynamic background override -->
  <script>
    fetch('/background')
      .then(res => res.json())
      .then(data => {
        if (data.imageUrl && data.imageUrl !== '/images/default-bg.jpg') {
          document.body.style.backgroundImage = `url('${data.imageUrl}')`;
          document.body.style.backgroundSize = 'cover';
          document.body.style.backgroundPosition = 'center';
          document.body.style.backgroundRepeat = 'no-repeat';
          document.body.style.backgroundAttachment = 'fixed';
        }
      })
      .catch(err => console.error("Background fetch failed:", err));
  </script>
</body>
</html>
