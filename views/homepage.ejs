<!DOCTYPE html>
<html>
<head>
  <title>Homepage</title>
  <link rel="stylesheet" href="/style.css">
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      color: #333;
    }
    .container {
      background-color: rgba(255, 255, 255, 0.85); /* semi-transparent overlay */
      padding: 20px;
      border-radius: 8px;
      max-width: 800px;
      margin: 40px auto;
      box-shadow: 0 4px 10px rgba(0,0,0,0.2);
    }
    textarea {
      width: 100%;
      min-height: 60px;
      margin-bottom: 10px;
      padding: 8px;
      border-radius: 4px;
      border: 1px solid #ccc;
    }
    button {
      background: #4CAF50;
      color: white;
      border: none;
      padding: 8px 16px;
      border-radius: 4px;
      cursor: pointer;
    }
    button:hover {
      background: #45a049;
    }
    .notes {
      list-style: none;
      padding: 0;
    }
    .notes li {
      background: #fafafa;
      margin-bottom: 15px;
      padding: 10px;
      border-radius: 6px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
    .notes small {
      display: block;
      margin-top: 5px;
      color: #666;
    }
    a {
      color: #d9534f;
      text-decoration: none;
      margin-left: 10px;
    }
    a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Welcome, <%= user.userName %></h1>

    <!-- Add note form -->
    <form method="POST" action="/notes">
      <textarea name="noteContent" placeholder="Write a note..." required></textarea>
      <button type="submit">Add note</button>
    </form>

    <!-- Notes list -->
    <ul class="notes">
      <% notes.forEach(function(note) { %>
        <li>
          <form method="POST" action="/notes/edit/<%= note._id %>">
            <textarea name="noteContent"><%= note.noteContent %></textarea>
            <button type="submit">Save</button>
            <a href="/notes/delete/<%= note._id %>">Delete</a>
          </form>
          <small>Last modified: <%= new Date(note.noteLastModified).toLocaleString() %></small>
        </li>
      <% }) %>
    </ul>

    <a href="/logout">Logout</a>
  </div>

  <!-- Background fetch script -->
  <script>
    fetch('/background')
      .then(res => res.json())
      .then(data => {
        document.body.style.backgroundImage = `url('${data.imageUrl}')`;
        document.body.style.backgroundSize = 'cover';
        document.body.style.backgroundPosition = 'center';
        document.body.style.backgroundRepeat = 'no-repeat';
        document.body.style.backgroundAttachment = 'fixed';
      })
      .catch(err => console.error("Background fetch failed:", err));
  </script>
</body>
</html>
